{
  "compilerOptions": {
    "target": "es6",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "baseUrl": "./",
    "lib": ["es2015", "dom"],
    "jsx": "react",
    "typeRoots": [
      "types",
      "./node_modules/@types"
    ],
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules",
    "bower_components"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}
